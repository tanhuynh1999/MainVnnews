@model IEnumerable<Model.EF.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>Member’s performance</h5>
            <br />
            <a class="btn btn-danger mt-3" style="font-size: 12px" href="/Admin/NewsAdmin/Create">Thêm tin tức</a>
        </div>
        <div class="card-block">
            <div class="table-responsive">
                <table class="table m-3">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.vnew_title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.vnew_img)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.vnew_view)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.vnew_active)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.vnew_option)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.vnew_datecreate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.vnew_dateupdate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User.user_name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.vnew_title)
                            </td>
                            
                            <td>
                                <img src="~/Images/News/@Html.DisplayFor(modelItem => item.vnew_img)" style="width: 100px; height"/>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vnew_view)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vnew_active)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vnew_option)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vnew_datecreate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vnew_dateupdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.user_name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.vnew_id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.vnew_id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.vnew_id })
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>

